<div class="col-md-6 col-md-offset-3">

	<div class="edit-movie-form">

		<h1>Edit Movie</h1>

		<%= simple_form_for @movie, :html => { :mulitpart => true } do |f| %>
		  <%= f.select :genre_id, @genres %>
		  <%= f.file_field :movie_poster %>
		  <%= f.input :title, label: "Movie Title" %>
		  <%= f.input :synopsis %>
		  <%= f.input :director %>
		  <%= f.button :submit, :class => "btn-custom2" %>
		<% end %>

	</div>

</div>